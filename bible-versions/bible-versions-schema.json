{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/LegendaryMediaTV/EGP-Graphai/bible-versions/bible-versions-schema.json",
  "title": "EGP Graphai â€¢ Bible Versions Registry",
  "description": "Registry of Bible versions, with metadata and per-testament overrides.",
  "type": "array",
  "items": { "$ref": "#/definitions/version" },
  "uniqueItems": true,
  "definitions": {
    "version": {
      "type": "object",
      "additionalProperties": false,
      "required": ["_id", "name", "license"],
      "properties": {
        "_id": {
          "type": "string",
          "pattern": "^[A-Za-z0-9._-]+$",
          "description": "Short identifier for the version, e.g., LXX, BYZ, EGP-EN."
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable version name."
        },
        "license": {
          "type": "string",
          "description": "License identifier, similar to package.json licensing (e.g., 'public-domain', 'copyright')."
        },
        "copyright": {
          "type": "string",
          "description": "Copyright statement or license information."
        },
        "script": {
          "type": "string",
          "enum": ["G", "H"],
          "description": "Default script for this version (Greek or Hebrew). If unset, assume Latin."
        },
        "morph_system": {
          "type": ["string", "null"],
          "description": "Morphology system used (e.g., Robinson, Packard)."
        },
        "testaments": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "OT": { "$ref": "#/definitions/testament" },
            "NT": { "$ref": "#/definitions/testament" }
          },
          "description": "Optional per-testament overrides for script and morphology."
        },
        "books": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["_id", "order"],
            "properties": {
              "_id": {
                "type": "string",
                "description": "Book identifier from bible-books.json"
              },
              "order": {
                "type": "integer",
                "minimum": 1,
                "description": "Order of the book in this version"
              }
            }
          },
          "uniqueItems": true,
          "description": "List of books included in this version with their order."
        },
        "canon_order": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true,
          "description": "Optional explicit ordering of book IDs for this version."
        }
      }
    },
    "testament": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "script": {
          "type": "string",
          "enum": ["G", "H"],
          "description": "Script override for this testament (Greek or Hebrew). If unset, assume Latin."
        },
        "morph_system": {
          "type": ["string", "null"],
          "description": "Morphology system override for this testament."
        }
      }
    }
  }
}
