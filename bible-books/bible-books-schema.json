{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/LegendaryMediaTV/EGP-Graphai/bible-books/bible-books-schema.json",
  "title": "EGP Graphai • Bible Books Registry",
  "description": "Canonical list of Bible books, incl. Apocrypha and LXX variants.",
  "type": "array",
  "items": { "$ref": "#/definitions/book" },
  "uniqueItems": true,
  "definitions": {
    "book": {
      "type": "object",
      "additionalProperties": false,
      "required": ["_id", "name", "title", "testament", "alt"],
      "properties": {
        "_id": {
          "type": "string",
          "description": "Unique 3-character identifier (e.g., 'GEN')."
        },
        "name": {
          "$ref": "../content-schema.json",
          "description": "The primary name of the book."
        },
        "title": {
          "$ref": "../content-schema.json",
          "description": "The full title of the book, often including traditional or formal naming."
        },
        "testament": {
          "type": "string",
          "enum": ["OT", "NT"],
          "description": "Apocrypha grouped under OT."
        },
        "alt": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "uniqueItems": true,
          "description": "Alternate names/abbreviations (2–3 chars, etc.)."
        }
      }
    }
  }
}
