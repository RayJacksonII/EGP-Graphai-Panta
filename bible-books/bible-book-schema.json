{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/LegendaryMediaTV/EGP-Graphai/bible-books/bible-books-schema.json",
  "title": "EGP Graphai • Bible Books Registry",
  "description": "Canonical list of Bible books, incl. Apocrypha and LXX variants, with per-canon ordering.",
  "type": "array",
  "items": { "$ref": "#/definitions/book" },
  "uniqueItems": true,
  "definitions": {
    "book": {
      "type": "object",
      "additionalProperties": false,
      "required": ["_id", "name", "testament", "alt"],
      "properties": {
        "_id": {
          "type": "string",
          "description": "OSIS-style id, e.g., Gen, Exod, 1Sam, DanGr, Sus."
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "testament": {
          "type": "string",
          "enum": ["OT", "NT"],
          "description": "Apocrypha grouped under OT."
        },
        "alt": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "uniqueItems": true,
          "description": "Alternate names/abbreviations (2–3 chars, etc.)."
        },
        "order": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "protestant": {
              "type": "integer",
              "minimum": 1,
              "description": "Order in Protestant canon"
            },
            "catholic": {
              "type": "integer",
              "minimum": 1,
              "description": "Order in Catholic canon"
            },
            "lxx": {
              "type": "integer",
              "minimum": 1,
              "description": "Order in Septuagint (LXX)"
            },
            "hebrew": {
              "type": "integer",
              "minimum": 1,
              "description": "Order in Hebrew Bible (Tanakh)"
            }
          },
          "description": "Sparse per-canon order map. Only include canons where this book appears."
        }
      }
    }
  }
}
